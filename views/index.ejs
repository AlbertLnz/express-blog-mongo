<div class="author">

  <h1 class='author__heading'>Hi, I am Albert</h1>
  <p class='author__body'>Web fullstack developer</p>

</div>

<img src="/imgs/hero-image.webp" alt="Person looking out through window" class='hero-image' width='981' height='528'>

<section class='articles'>

  <h2 class='articles__heading'>Latest Posts</h2>

  <ul class='articles__ul'>

    <% data.forEach(post => { %>
      
      <li>
        <a href="#">
          <span><%= post.title %></span>
          <span class='article-list__date'><%= post.createdAt.toDateString() %></span>
        </a>
      </li>

    <%  });  %>
    
  </ul>

  <a href="#" class='pagination'>&lt; View Older Posts</a>

</section>